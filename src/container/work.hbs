{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with main}}
    <main>
        <section>
            {{>title data= "work history" big=true}}
            <div>
                <ul>
                    {{#each works}}
                    <li>
                        <div>
                            {{position}}
                        </div>

                        <br>

                        <div>
                            {{duration.from}} -
                            {{#if duration.to }}
                            {{duration.to}}
                            {{else}}
                            (Еще тут работаю)
                            {{/if}}
                        </div>

                        <br>
                        <div>
                            {{#if company.url}}
                            {{>link text=company.name href=company.url blank=true noLine=true}}
                            {{else}}
                            <b>{{company.name}}</b>
                            {{/if}}
                        </div>
                    </li>

                    <br>
                    <br>

                    <strong>
                        <div>Projects ({{projectAmount}})</div>
                    </strong>

                    <br>

                    <ul>
                        {{#each projects}}
                        <li>

                            <div>
                                {{name}}
                            </div>

                            <div>
                                {{>link text=name href=url blank=true noLine=true}}
                            </div>

                            <br>
                            <div>

                                <p>{{about}}</p>
                            </div>

                            <br>

                            <div>
                                <em>Project stacks({{stackAmount}})</em>
                            </div>

                            <br>

                            <div>
                                <ul>
                                    {{#each stacks}}
                                    <li>
                                        {{name}}
                                    </li>
                                    {{/each}}
                                </ul>

                            </div>

                            <br>

                            <em>Project awards({{awardAmount}})</em>

                            <br>

                            <div>
                                <ul>
                                    {{#each awards}}
                                    <li>
                                        {{name}}
                                    </li>
                                    {{/each}}
                                </ul>
                            </div>

                        </li>
                        {{/each}}
                    </ul>

                    {{/each}}
                </ul>
            </div>
        </section>
        {{/with}}


</div>

